<!DOCTYPE html>
<html>
  <head>
    <title>PictureCopy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'stylesheets', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="fixed flex w-full bg-white p-6">
        <div class="flex-1 text-gray-700">
          <%= link_to root_path do %>
            PictureCopy
          <% end %>
        </div>

        <div class="flex-1 text-right">
          <%= link_to "Add Picture", new_picture_path, class: "block text-gray-700 hover:text-black" %>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
